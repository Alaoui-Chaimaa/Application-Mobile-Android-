<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.controller.ModifySuccess"
    android:background="@drawable/image_doc"
    android:orientation="vertical">


        <ImageButton
            android:id="@+id/image"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:background="#00FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="image"
            android:src="@drawable/rdv" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:gravity="center"
            android:text="Votre Rendez-vous a été modifié. "
            android:textSize="18sp" />
       <Button
           android:id="@+id/btn_consultation_rdv"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:text="Consulter Rendez-vous"
           android:textColor="@android:color/white"
           android:textStyle="bold"
           android:background="#4eacd1"
           android:layout_marginTop="25dp"
           android:layout_gravity="center"></Button>
    <Button
        android:id="@+id/btn_chercher_medecin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Chercher Un Médecin"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="#4eacd1"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"></Button>
    <Button
        android:id="@+id/btn_deconnexion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Deconnexion"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="#4eacd1"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"></Button>



</LinearLayout>